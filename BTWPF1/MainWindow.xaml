<Window x:Class="BTWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTWPF1"
        mc:Ignorable="d"
        Title="SE193418-PhamHoangMinhChau" Height="450" Width="800">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            He So _a:
        </Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName=txtB}">
            He So _b:
        </Label>
        <TextBox Name="txtB"></TextBox>
        <TextBlock>Ket qua:</TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10" Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/171352_calculator_icon.png" Width="16" Height="16"/>
                    <TextBlock Margin="5.0">Tong</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10" Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/x.png"  Width="16" Height="16"/>
                    <TextBlock Margin="5.0">Thoat</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
