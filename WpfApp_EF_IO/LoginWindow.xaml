<Window x:Class="WpfApp_EF_IO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO"
        mc:Ignorable="d"
        Title="LoginWindow" Height="326" Width="602">
    <Grid>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="177,95,0,0" VerticalAlignment="Top" Height="26" Width="48"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="177,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,0.561" Height="26" Width="72"/>
        <TextBox  x:Name="txtEmail"  HorizontalAlignment="Left" Margin="267,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152" Height="18"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="267,134,0,0" VerticalAlignment="Top" Width="152" Height="18"/>
        <CheckBox x:Name="chkLoginSave" Content="Luu thong tin dang nhap" HorizontalAlignment="Left" Margin="267,163,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Dang Nhap" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Width="68" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Thoat" HorizontalAlignment="Left" Margin="352,197,0,0" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
