<Window x:Class="ListWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWpf"
        mc:Ignorable="d"
        Title="SE193418-PhamHoangMinhChau" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtGiaTri" HorizontalAlignment="Left" Margin="17,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Height="22"/>
        <Button x:Name="btnThem" Content="Them vao List" HorizontalAlignment="Left" Margin="127,13,0,0" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.5,0.5" Click="btnThem_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0.341" Y="-1"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <ListBox x:Name="_1stDuLieu" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="15,38,0,0" SelectionMode="Multiple" Height="275" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnSapXepTang" Content="Sap Xep Tang" HorizontalAlignment="Left" Margin="127,143,0,0" VerticalAlignment="Top" Width="115" Click="btnSapXepTang_Click"/>
        <Button x:Name="btnSapXepGiam" Content="Sap xep giam" HorizontalAlignment="Left" Margin="127,180,0,0" VerticalAlignment="Top" Width="115" Click="btnSapXepGiam_Click"/>
        <Button x:Name="btnXoa1PhanTu" Content="Xoa 1 phan tu" HorizontalAlignment="Left" Margin="127,220,0,0" VerticalAlignment="Top" Width="115" Click="btnXoa1PhanTu_Click"/>
        <Button x:Name="btnXoaNhieuPhanTu" Content="Xoa nhieu phan tu" HorizontalAlignment="Left" Margin="127,256,0,0" VerticalAlignment="Top" Width="115" Click="btnXoaNhieuPhanTu_Click"/>
        <Button x:Name="btnXoaToanBoPhanTu" Content="Xoa Toan Bo Phan Tu" HorizontalAlignment="Left" Margin="127,293,0,0" VerticalAlignment="Top" Width="115" Click="btnXoaToanBoPhanTu_Click"/>
        <Label Content="Gia tri" HorizontalAlignment="Left" Margin="127,45,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGiaTriChen" HorizontalAlignment="Left" Margin="176,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23"/>
        <Label Content="Vi tri" HorizontalAlignment="Left" Margin="127,73,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtViTriChen" HorizontalAlignment="Left" Margin="176,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnChen" Content="Chen" HorizontalAlignment="Left" Margin="176,111,0,0" VerticalAlignment="Top" Width="66" Click="btnChen_Click"/>

    </Grid>
</Window>
