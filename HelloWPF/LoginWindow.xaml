<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="345*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="3" Content="Man Hinh Dang Nhap" HorizontalAlignment="Left" Margin="49,114,0,0" VerticalAlignment="Top" FontSize="24" Grid.ColumnSpan="2" Foreground="Red" Background="#FFA6DF95"/>
        <Button x:Name="btnDangNhap" Grid.Column="3" Content="Dang Nhap" HorizontalAlignment="Left" Margin="40,278,0,0" VerticalAlignment="Top" FontSize="20" Width="123" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Grid.Column="3" Content="Thoat" HorizontalAlignment="Left" Margin="205,278,0,0" VerticalAlignment="Top" FontSize="20" Width="86" Grid.ColumnSpan="2" Click="btnThoat_Click"/>
        <Label Grid.Column="3" Content="Username: " HorizontalAlignment="Left" Margin="49,175,0,0" VerticalAlignment="Top" Width="114" FontSize="20"/>
        <TextBox x:Name="txtUserName" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="168,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Label Grid.Column="3" Content="Password: " HorizontalAlignment="Left" Margin="49,221,0,0" VerticalAlignment="Top" Width="114" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="170,230,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
