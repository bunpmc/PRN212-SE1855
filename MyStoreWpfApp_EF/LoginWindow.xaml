<Window x:Class="MyStoreWpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Dang Nhap" HorizontalAlignment="Center" VerticalAlignment="Center" ContentStringFormat="" Height="32" Width="178">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Blue" Offset="0.0"/>
                    <GradientStop Color="Red" Offset="1.0"/>
                    <GradientStop Color="Green" Offset="0.5"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="288,263,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="349,267,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="178"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="288,294,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Password="12" HorizontalAlignment="Left" Margin="355,302,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDangNhap" Content="Dang Nhap" HorizontalAlignment="Left" Margin="319,346,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoat" HorizontalAlignment="Left" Margin="418,346,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
