<Window x:Class="RadioButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonControl"
        mc:Ignorable="d"
        Title="SE193418-PhamHoangMinhChau" Height="450" Width="800">
    <StackPanel>
        <GroupBox Header="Ban cam thay he thong nhu nao?">
            <StackPanel>
                <RadioButton GroupName="hethong" Name="radRatTot">Rat Tot</RadioButton>
                <RadioButton GroupName="hethong" Name="radTot" Content="Tot"/>
                <RadioButton GroupName="hethong" Name="radTamDuoc" Content="Tam Duoc"/>
                <RadioButton GroupName="hethong" Name="radKhongTot" Content="Khong Tot"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Gioi tinh cua ban la gi?"/>
        <StackPanel>
            <RadioButton GroupName="gioitinh" Name="radNam" Content="Nam"/>
            <RadioButton GroupName="gioitinh" Name="radNu" Content="Nu"/>
        </StackPanel>
        <GroupBox Height="100" Header="Chon tac vu">
            <StackPanel Orientation="Horizontal" Height="100">
                <Button Content="Gui phan hoi" Name="btnGui" Width="100" Margin="10" Click="btnGui_Click"/>
                <Button Content="Huy" Name="btnHuy" Width="100" Margin="10" Click="btnHuy_Click"/>
            </StackPanel>
        </GroupBox>
        





    </StackPanel>
</Window>
